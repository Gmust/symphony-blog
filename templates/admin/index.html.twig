{# templates/admin/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container mx-auto mt-4">
        <h1 class="text-2xl font-bold text-emerald-500">Admin Dashboard</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
            <div class="bg-white dark:bg-gray-700 shadow-md rounded-lg p-6">
                <h2 class="text-lg font-bold text-gray-800 dark:text-gray-200">Manage Posts</h2>
                <p class="text-gray-600 dark:text-gray-400">Create, edit, and delete posts.</p>
                <a href="{{ path('get_all_posts') }}" class="mt-2 bg-emerald-500 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Go to Posts
                </a>
            </div>
        </div>
    </div>
{% endblock %}
