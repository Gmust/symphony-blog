{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My Project{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="bg-gray-100 text-gray-800">
<nav class="bg-emerald-500 p-4">
    <div class="container mx-auto">
        <a href="{{ path('app_home') }}" class="text-white font-bold">Home</a>
        <a href="{{ path('app_login') }}" class="text-white ml-4">Login</a>
        <a href="{{ path('app_register') }}" class="text-white ml-4">Register</a>
    </div>
</nav>

<main class="container mx-auto mt-4">
    {% block body %}{% endblock %}
</main>

{% block javascripts %}{% endblock %}
</body>
</html>
