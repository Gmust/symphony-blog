{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
    <div class="flex flex-col justify-start bg-white shadow-md rounded-lg p-6 mt-6 space-y-6">
        <h1 class="text-2xl font-bold text-emerald-500">All Posts</h1>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('create_post') }}" class="bg-emerald-500 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Create New Post
            </a>
        {% endif %}
        <ul class="space-y-4">
            {% for post in posts %}
                <li class="border-b border-gray-200 pb-4 mb-4">
                    <a href="{{ path('get_post', { id: post.id }) }}" class="text-xl text-emerald-500 hover:underline">{{ post.title }}</a>
                    <p class="text-gray-600">{{ post.content|slice(0, 100) }}{% if post.content|length > 100 %}...{% endif %}</p>
                    {% if post.user.id == app.user.id %}
                        <a href="{{ path('update_post', { id: post.id }) }}" class="text-blue-500 hover:underline">Edit</a>
                        <form method="post" action="{{ path('delete_post', { id: post.id }) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="text-red-500 hover:underline">Delete</button>
                        </form>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
